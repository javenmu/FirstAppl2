        <activity
            android:name="com.example.javen.AutoComplete.AutoComplActivity"
            android:label="@string/title_activity_auto_compl" >
        </activity>
        <activity
            android:name="com.example.javen.ExpandableListView.ExpandListViewActivity"
            android:label="@string/title_activity_expand_list_view" >
        </activity>
        <activity
            android:name="com.example.javen.ViewFlipper.StaticFlipperActivity"
            android:label="@string/title_activity_static_flipper" >
        </activity>
        <activity
            android:name="com.example.javen.ViewFlipper.DynamicFlipperActivity"
            android:label="@string/title_activity_dynamic_flipper" >
        </activity>
    </application>

</manifest>
