<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.javen.firstappl" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".EditTextWithDel" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/edit_text_with_del_info" />
        </receiver>

        <activity
            android:name="com.example.javen.imageview.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.javen.radiobutton.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.javen.ToggleBtnSwitchActivity"
            android:label="@string/title_activity_toggle_btn_switch" >
        </activity>
        <activity
            android:name="com.example.javen.togglebtnswitch.ToggleBtnSwitchActivity"
            android:label="@string/title_activity_toggle_btn_switch" >
        </activity>
        <activity
            android:name="com.example.javen.progressbar.ProgressBarActivity"
            android:label="@string/title_activity_progress_bar" >
        </activity>
    </application>

</manifest>
